<Page x:Class="ProgramInwentaryzacyjny.RaportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgramInwentaryzacyjny"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RaportPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <DatePicker Grid.Row="0" Grid.Column="0" Name="data_A" FontSize="16"/>

        <DatePicker Grid.Row="0" Grid.Column="1" Name="data_B" FontSize="16"/>

        <Button Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="20" Height="50" Width="200" FontSize="20" FontWeight="Bold" Content="Pobierz raport" Click="RaportExcel">
            <Button.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#C53783" Offset="1.0"/>
                    <GradientStop Color="White" Offset="0.5"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Page>
